<graph id="GraphReprojectionOp">
    <version>1.0</version>
    <node id="Read">
        <operator>Read</operator>
        <sources/>
        <parameters class="com.bc.ceres.binding.dom.XppDomElement">
            <file>$input1</file>
        </parameters>
    </node>
    <node id="Resample">
        <operator>Resample</operator>
        <sources>
            <sourceProduct refid="Read"/>
        </sources>
        <parameters class="com.bc.ceres.binding.dom.XppDomElement">
            <referenceBand>$resampleRefBand</referenceBand>
            <targetWidth/>
            <targetHeight/>
            <targetResolution/>
            <upsampling>Nearest</upsampling>
            <downsampling>First</downsampling>
            <flagDownsampling>First</flagDownsampling>
            <resampleOnPyramidLevels>true</resampleOnPyramidLevels>
        </parameters>
    </node>
    <node id="Subset">
        <operator>Subset</operator>
        <sources>
            <sourceProduct refid="Resample"/>
        </sources>
        <parameters class="com.bc.ceres.binding.dom.XppDomElement">
            <sourceBands/>
            <region>$subsetRegion</region>
            <geoRegion/>
            <subSamplingX>1</subSamplingX>
            <subSamplingY>1</subSamplingY>
            <fullSwath>false</fullSwath>
            <tiePointGridNames/>
            <copyMetadata>true</copyMetadata>
        </parameters>
    </node>
    <node id="ReprojectionOp">
        <operator>Reproject</operator>
        <sources>
            <sourceProduct refid="Subset"/>
        </sources>
        <parameters class="com.bc.ceres.binding.dom.XppDomElement">
            <crs>$crs</crs>
            <resampling>$resampling</resampling>
            <orthorectify>$orthorectify</orthorectify>
            <noDataValue>$noDataValue</noDataValue>
            <includeTiePointGrids>$includeTiePointGrids</includeTiePointGrids>
            <addDeltaBands>$addDeltaBands</addDeltaBands>
        </parameters>
    </node>
    <node id="Write">
        <operator>Write</operator>
        <sources>
            <sourceProduct refid="ReprojectionOp"/>
        </sources>
        <parameters class="com.bc.ceres.binding.dom.XppDomElement">
            <file>$out1</file>
            <formatName>BEAM-DIMAP</formatName>
        </parameters>
    </node>
</graph>